# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your actual values

# AWS Configuration
region = "us-east-1"

# Project Configuration
project_name = "aws-image-translate"
environment  = "dev"

# S3 Configuration - MUST be globally unique
s3_bucket_name       = "your-unique-image-storage-bucket-name"
frontend_bucket_name = "your-unique-frontend-hosting-bucket-name"

# Frontend Configuration
frontend_path = "../frontend"
allowed_origins = ["http://localhost:8080", "http://127.0.0.1:8080"]

# Cognito Token Validity Configuration (optional - defaults provided)
# cognito_access_token_validity  = 1   # Hours (1-24)
# cognito_id_token_validity      = 1   # Hours (1-24)
# cognito_refresh_token_validity = 30  # Days (1-3650)
